<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:id="@+id/root_view"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:padding="16dp"
        android:background="@android:color/white">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics (debts)"
            app:MvxLang="Text StatsDebts"
            android:textColor="#404040"
            android:textSize="21sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_blue">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/primary"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_finance_grey600_24dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15"
                    app:MvxBind="Text AmountOfDebts"
                    android:textColor="#404040"
                    android:textSize="21sp"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxLang="Text AmountOfDebts"
                    android:textColor="#808080"
                    android:textSize="17sp"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_yellow">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@android:color/holo_orange_dark"
                    android:layout_gravity="center"
                    android:src="@drawable/credit_card_outline"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$1650"
                    app:MvxBind="Text '$' + TotalMoneyAmountOfDebts + ' (' + TotalDebtsCurrency + ')'"
                    android:textColor="#404040"
                    android:textSize="21sp"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxLang="Text TotalAmountDebts"
                    android:textColor="#808080"
                    android:textSize="17sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_red">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/debt_bubble_color"
                    android:layout_gravity="center"
                    android:src="@drawable/cash"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$900"
                    app:MvxBind="Text '$' + RemainingMoneyAmountOfDebts + ' (' + RemainingDebtsCurrency + ')'"
                    android:textColor="#404040"
                    android:textSize="21sp"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxLang="Text RemainingDebts"
                    android:textColor="#808080"
                    android:textSize="17sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_green">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/success_green_color"
                    android:layout_gravity="center"
                    android:src="@drawable/cash"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxBind="Text '$' + CollectedMoneyAmountOfDebts + ' (' + CollectedDebtsCurrency + ')'"
                    android:textColor="#404040"
                    android:textSize="21sp"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxLang="Text CollectedDebts"
                    android:textColor="#808080"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:padding="16dp"
        android:background="@android:color/white">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:MvxLang="Text StatsLoans"
            android:textColor="#404040"
            android:textSize="21sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_blue">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/primary"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_finance_grey600_24dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxBind="Text AmountOfLoans"
                    android:textColor="#404040"
                    android:textSize="21sp"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxLang="Text AmountOfLoans"
                    android:textColor="#808080"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_yellow">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@android:color/holo_orange_dark"
                    android:layout_gravity="center"
                    android:src="@drawable/credit_card_outline"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxBind="Text '$' + TotalMoneyAmountOfLoans + ' (' + TotalLoansCurrency + ')'"
                    android:textColor="#404040"
                    android:textSize="21sp"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxLang="Text TotalAmountOfLoans"
                    android:textColor="#808080"
                    android:textSize="17sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_red">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/debt_bubble_color"
                    android:layout_gravity="center"
                    android:src="@drawable/cash"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxBind="Text '$' + RemainingMoneyAmountOfLoans + ' (' + RemainingLoansCurrency + ')'"
                    android:textColor="#404040"
                    android:textSize="21sp"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxLang="Text RemainingAmountLoan"
                    android:textColor="#808080"
                    android:textSize="17sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_green">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/success_green_color"
                    android:layout_gravity="center"
                    android:src="@drawable/cash"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxBind="Text '$' + CollectedMoneyAmountOfLoans + ' (' + CollectedLoansCurrency + ')'"
                    android:textColor="#404040"
                    android:textSize="21sp"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:MvxLang="Text PaidAmountLoan"
                    android:textColor="#808080"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="48dp"/>
</LinearLayout>

 

